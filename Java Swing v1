    private void AppearOn(java.beans.PropertyChangeEvent evt) {                          
        // TODO add your handling code here:

        sqButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent arg0) {

                if (q_CB.getSelectedItem() == "Create Transaction") {
                    bNo_L.setEnabled(true);
                    bNo_TF.setEnabled(true);
                    cName_L.setEnabled(true);
                    cName_TF.setEnabled(true);

                    bNo_L.setVisible(true);
                    bNo_TF.setVisible(true);
                    cName_L.setVisible(true);
                    cName_TF.setVisible(true);
                } else {
                    bNo_L.setEnabled(false);
                    bNo_TF.setEnabled(false);
                    cName_L.setEnabled(false);
                    cName_TF.setEnabled(false);

                    bNo_L.setVisible(false);
                    bNo_TF.setVisible(false);
                    cName_L.setVisible(false);
                    cName_TF.setVisible(false);
                }
            }
        });
    

    }                         

    private void sq_LVComponentShown(java.awt.event.ComponentEvent evt) {                                     
        // TODO add your handling code here:
      
    }                                    

    private void sq_LVPropertyChange(java.beans.PropertyChangeEvent evt) {                                     
        // TODO add your handling code here:
        sqButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent arg0) {
                sq_LV.setText(q_CB.getSelectedItem().toString());
                
            }
        });
    }                                    

